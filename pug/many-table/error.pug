    style.
      h1 {
        font-size: 1.6rem;
      }
      .h100 {
        height: 100%;
      }
      main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;        
      }
      .tile {
        display: flex;
      }
      svg {
        width: 50%;
        height: 50%;
      }
      .not-found {
        display: none;
      }
      .auth-error {
        display: none;
      }
      .display {
        display: block;
      }
      .hide {
        display: none;
      }
      button {
        padding: .5rem 2rem;
        margin: 0;
        border-width: 0;
        background: rgb(173, 173, 241);
        cursor: pointer;
      }
      .ml {
        margin-left: 1em;
      }
      a {
        margin: auto;
      }
      #test {
        display:inline-block;
        width: 75px;
        height: 75px;
      }
      .front {
        display:inline-block;
        background: lightblue;
        width: 75px;
        height: 75px;
      }
      .back {
        display:inline-block;
        background: blue;
        width: 75px;
        height: 75px;
      }


